<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
	    <Console name="DebugConsole" target="SYSTEM_OUT">
	      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{20}.%M():%L - %msg%n"/>
	      <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
	    </Console>
	
	    <Console name="InfoConsole" target="SYSTEM_OUT">
	      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
	      <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
	    </Console>
	
	    <File name="ErrorFile" fileName="logs/errors.log">
	      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n%ex{full}"/>
	      <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
	    </File>

    </Appenders>

    <Loggers>
        <Logger name="dev.dixmk.minepreggo" level="debug" additivity="false">
            <AppenderRef ref="DebugConsole"/>
			<AppenderRef ref="InfoConsole"/>
		    <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="DebugConsole"/>
		    <AppenderRef ref="InfoConsole"/>
		    <AppenderRef ref="ErrorFile"/>
        </Root>
        
    </Loggers>
</Configuration>